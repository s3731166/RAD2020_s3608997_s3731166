<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div> 
  
  <%# here we we will have a select box or the categories %>
  <div class="field">
      <%= form.label :topic %>

      <%= form.collection_select :topic_id, Topic.all, :id, :topicName, class: 'form-control' %>

  </div> 


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
